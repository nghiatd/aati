                    var obj = $.parseJSON(result);
                    jQuery("#view_name").val(obj[0]['name']);
                    jQuery("#view_link").val(obj[0]['seo']);
                    jQuery("#view_order").val(obj[0]['order']);
                    jQuery("#view_statuss").val(obj[0]['status']);

                        modal:true,
                        width:"640",
                        beforeClose: function(event, ui) {
                            jQuery("#view_name").val("");
                            jQuery("#view_link").val("");
                            jQuery("#view_order").val("");
                            jQuery("#view_statuss").val("");
                        },
                        buttons: { "Ok": function() { $(this).dialog("close"); } }
                    }).dialog("open");
                }
            });
        });
        //Update type
        var id_type="";
        jQuery(".edit_type").click(function(evt){
            evt.preventDefault();
            var id=jQuery(this).attr("id");
            id_type=id;
            jQuery.ajax({
                url:"<?php echo 'http://'.URL_CONFIG;?>/public/admin/index/gettypecommunity",
                type:"POST",
                data:{data:id},
                success:function(result){
                    var obj = $.parseJSON(result);
                    jQuery("#up_name").val(obj[0]['name']);
                    jQuery("#up_link").val(obj[0]['seo']);
                    jQuery("#up_order").val(obj[0]['order']);
                    jQuery("#up_statuss").val(obj[0]['status']);
                    jQuery("#dialog_update_type").dialog({
                        title:"Update Type Community",
                        modal:true,
                        width:"640",
                        beforeClose: function(event, ui) {
                            jQuery("#up_name").val("");
                            jQuery("#up_link").val("");
                            jQuery("#up_order").val("");
                            jQuery("#up_statuss").val("");
                        }
                    }).dialog("open");
                }
            });
        });
        //Xu ly update type about
        jQuery("#btn_update_type").click(function(){
            var id=id_type;
            var name=jQuery("#up_name").val();
            var link=jQuery("#up_link").val();
            var order=jQuery("#up_order").val();
            var status=jQuery("#up_statuss").val();

            var datalist=new Array();
            datalist[0]=    id;
            datalist[1]=    name;
            datalist[2]=    link; 
            datalist[3]=    order;
            datalist[4]=    status;
            jQuery.ajax({
                url:"<?php echo 'http://'.URL_CONFIG;?>/public/admin/index/updatetypecommunity",
                type:"POST",
                data:{data:datalist},
                success:function(result){
                    alert(result);
                    location.href="<?php echo 'http://'.URL_CONFIG.'/public/admin/index/typecommunity' ?>";
                }
            });
        });
        //Xu ly delete type about
        jQuery(".delete_type").click(function(evt){
            evt.preventDefault();
            var choose=confirm("You are want to delete?");
            if(choose){
                var id=jQuery(this).attr("id");
                jQuery.ajax({
                    url:"<?php echo 'http://'.URL_CONFIG;?>/public/admin/index/deletetypecommunity",
                    type:"POST",
                    data:{data:id},
                    success:function(result){
                        alert(result);
                        location.href="<?php echo 'http://'.URL_CONFIG.'/public/admin/index/typecommunity' ?>";
                    }
                });
            }            
        });
    });
</script>
